---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description = "Meet our team of talented individuals who are passionate about building the best products for you.";

import {
  default as p1,
  default as p2,
  default as p3,
  default as p4,
  default as p5,
  default as p6,
} from "../../assets/pics/profile-pic.png";

const team = [
  {
    pic: p1,
    name: "Arpit Sengar",
    role: "Developer",
    description:
      "uhh yeah it's just me for now, do let me know if you wanna join the team!",
    linkedin: "https://linkedin.com/in/arpitsengar",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Team" description={description} />
    <div
      class="grid gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.linkedin}
          />
        ))
      }
    </div>
    <div class="flex justify-end mt-10">
      <a href="https://github.com/arpy8/WYA/graphs/contributors" target="_blank" rel="noopener noreferrer">
        <button class="btn-primary">See contributors</button>
      </a>
    </div>
  </div>
</Section>
